<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41224f"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#41224f"
        android:orientation="vertical"
        android:padding="50px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FABB34"
                android:gravity="center"
                android:text="Dom's Color Picker"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btnColorPreview"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:src="@drawable/fluer"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FABB34"
                android:gravity="center">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="37dp"
                    android:background="#555555"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text="#"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/strColor"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:background="#555555"
                    android:imeOptions="actionDone"
                    android:maxLength="8"
                    android:padding="5sp"
                    android:text="FFFF0000"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingRight="35dp"
            android:text="Red"
            android:textColor="#F80303"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/colorR"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:padding="10px"
                android:progress="255"
                android:progressDrawable="@drawable/seekbar_r_progress"
                android:thumb="@drawable/seekbar_r_thumb" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="255"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="35dp"
            android:text="Green"
            android:textColor="#89DD29"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/colorG"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:padding="10px"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_g_progress"
                android:thumb="@drawable/seekbar_g_thumb" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="35dp"
            android:text="Blue"
            android:textColor="#2196F3"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/colorB"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:padding="10px"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_b_progress"
                android:thumb="@drawable/seekbar_b_thumb" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="35dp"
            android:text="Opacity"
            android:textColor="#DBD6D7"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/colorA"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:max="255"
                android:padding="10px"
                android:progress="255"
                android:progressDrawable="@drawable/seekbar_a_progress"
                android:thumb="@drawable/seekbar_a_thumb"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="255"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/colorOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#EEEEEE"
                android:text="Save"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preset 1" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preset 2" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preset 3" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preset 4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="save"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>